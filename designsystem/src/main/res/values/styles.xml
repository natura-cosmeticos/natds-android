<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- TYPOGRAPHY STYLES -->
    <style name="Heading1" parent="TextAppearance.MaterialComponents.Headline1">
        <item name="fontFamily">@string/font_roboto_regular</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">@dimen/ds_size_h1</item>
        <item name="android:lineSpacingMultiplier">1.5</item>
    </style>

    <style name="Heading2" parent="TextAppearance.MaterialComponents.Headline2">
        <item name="fontFamily">@string/font_roboto_regular</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">@dimen/ds_size_h2</item>
        <item name="android:lineSpacingMultiplier">@dimen/ds_line_height_medium</item>
    </style>

    <style name="Heading3" parent="TextAppearance.MaterialComponents.Headline3">
