<?xml version="1.0" encoding="utf-8"?>

<resources>

    <style name="Theme.Natura.NoActionBar" parent="Theme.Natura">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Natura" parent="Theme.MaterialComponents.Light">
        <item name="colorPrimary">#F4AB34</item>
        <item name="colorPrimaryDark">#EF8426</item>
        <item name="colorSecondary">#FF6B06</item>
        <item name="colorError">#E74627</item>
        <item name="android:colorBackground">@android:color/white</item>
        <item name="colorAccent">?colorPrimary</item>
        <item name="colorControlHighlight">#1F000000</item>
        <item name="colorControlNormal">#BBBBBB</item>

        <!-- Type styles -->
        <item name="textAppearanceHeadline6">@style/TextAppearance.MaterialComponents.Headline6</item>
        <item name="textAppearanceBody2">@style/TextAppearance.MaterialComponents.Body2</item>
        <item name="android:textColorPrimary">#333333</item>
        <item name="android:textColorPrimaryDisableOnly">#BBBBBB</item>
        <item name="android:textColorSecondary">#777777</item>
        <item name="android:textColorLink">#227BBD</item>
        <item name="android:textColorHighlight">#000000</item>

        <!--Component styles-->
        <item name="buttonStyle">@style/Widget.Natura.Button.DarkText</item>
        <item name="navigationViewStyle">@style/Widget.Natura.NavigationView</item>
        <item name="checkboxStyle">@style/Widget.Natura.CheckBox</item>
        <item name="radioButtonStyle">@style/Widget.Natura.RadioButton</item>
        <item name="toolbarStyle">@style/Widget.Natura.Toolbar</item>
        <item name="searchViewStyle">@style/Widget.Natura.SearchView</item>

        <!--Material buttons style-->
        <item name="materialButtonStyle">@style/Widget.Natura.Button.DarkText</item>
        <item name="materialButtonOutlinedStyle">@style/Widget.Natura.Button.Outlined.DarkText</item>
        <item name="materialBorderlessButtonStyle">@style/Widget.Natura.Button.TextButton.DarkText</item>
    </style>

    <!--Not supported officialy-->
    <style name="Theme.Avon" parent="Theme.Natura">
        <item name="colorPrimary">#DE0085</item>
        <item name="colorSecondary">#E9E9E9</item>

        <!--Material buttons style-->
        <item name="materialButtonStyle">@style/Widget.Natura.Button</item>
        <item name="materialButtonOutlinedStyle">@style/Widget.Natura.Button.Outlined.StrokeColored</item>
        <item name="materialBorderlessButtonStyle">@style/Widget.Natura.Button.TextButton</item>
    </style>

    <style name="Theme.Avon.NoActionBar" parent="Theme.Avon">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!--Not supported officialy-->
    <style name="Theme.BodyShop" parent="Theme.Natura">
        <item name="colorPrimary">#004236</item>
        <item name="colorSecondary">#A55F53</item>

        <item name="materialButtonStyle">@style/Widget.Natura.Button</item>
        <item name="materialButtonOutlinedStyle">@style/Widget.Natura.Button.Outlined.StrokeColored</item>
        <item name="materialBorderlessButtonStyle">@style/Widget.Natura.Button.TextButton</item>
    </style>

    <style name="Theme.BodyShop.NoActionBar" parent="Theme.BodyShop">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
</resources>