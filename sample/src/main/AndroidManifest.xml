<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.natura.android.sample"
    android:sharedUserId="com.natura.android.designsystem.uid">

    <application
        android:allowBackup="true"
        android:fullBackupContent="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".components.AppBarActivity"
            android:theme="@style/Theme.Natura.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.SEARCH" />
            </intent-filter>

            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searchable" />
        </activity>
        <activity android:name=".components.ErrorActivity"
            android:theme="@style/Theme.Natura" />
        <activity
            android:name=".components.TextFieldActivity"
            android:theme="@style/Theme.Natura" />
        <activity
            android:name=".components.SubmenuActivity"
            android:theme="@style/Theme.Natura" />
        <activity
            android:name=".components.SelectionControlActivity"
            android:theme="@style/Theme.Natura" />
        <activity
            android:name=".components.ExpandableNavigationViewActivity"
            android:theme="@style/Theme.Natura" />
        <activity
            android:name=".components.MenuActivity"
            android:theme="@style/Theme.Natura" />
        <activity
            android:name=".components.IconActivity"
            android:theme="@style/Theme.Natura" />
        <activity
            android:name=".components.DrawableActivity"
            android:theme="@style/Theme.Natura" />
        <activity
            android:name=".components.LoadingActivity"
            android:theme="@style/Theme.Natura" />
        <activity
            android:name=".components.ValueTextHighlightActivity"
            android:theme="@style/Theme.Natura" />
        <activity
            android:name=".components.StyleButtonActivity"
            android:theme="@style/Theme.Natura" />
    </application>

</manifest>