<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ScrollView
        android:id="@+id/scrollViewIconButtons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/iconButtonActivityContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="?spacingMicro">

            <com.natura.android.iconButton.IconButton
                android:id="@+id/iconButtonColorDefault"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="?spacingSmall"
                app:iconName="outlined_default_mockup"
                app:layout_constraintEnd_toStartOf="@id/textViewColorDefault"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:sizeButton="semi"
                app:styleButton="inherit" />

            <TextView
                android:id="@+id/textViewColorDefault"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="60dp"
                android:layout_marginTop="?spacingTiny"
                android:text="@string/iconbutton_screen_color_highemphasis_default_text"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/iconButtonColorDefault" />

            <com.natura.android.iconButton.IconButton
                android:id="@+id/iconButtonColorDefaultDisabled"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:enabled="false"
                app:buttonColor="defaultColor"
                app:iconName="outlined_default_mockup"
                app:layout_constraintEnd_toStartOf="@id/textViewColorDefaultDisabled"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/iconButtonColorDefault"
                app:sizeButton="semi"
                app:styleButton="inherit" />

            <TextView
                android:id="@+id/textViewColorDefaultDisabled"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="60dp"
                android:layout_marginTop="?spacingTiny"
                android:text="@string/iconbutton_screen_color_highemphasis_disabled_text"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/iconButtonColorDefaultDisabled" />

            <com.natura.android.iconButton.IconButton
                android:id="@+id/iconButtonColorPrimary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:buttonColor="primaryColor"
                app:iconName="outlined_default_mockup"
                app:layout_constraintEnd_toStartOf="@id/textViewColorPrimary"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/iconButtonColorDefaultDisabled"
                app:sizeButton="semi"
                app:styleButton="inherit" />

            <TextView
                android:id="@+id/textViewColorPrimary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="60dp"
                android:layout_marginTop="?spacingTiny"
                android:text="@string/iconbutton_screen_color_primary_text"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/iconButtonColorPrimary" />

            <com.natura.android.iconButton.IconButton
                android:id="@+id/iconButtonColorPrimaryDisabled"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:enabled="false"
                app:buttonColor="primaryColor"
                app:iconName="outlined_default_mockup"
                app:layout_constraintEnd_toStartOf="@id/textViewColorDefault"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/iconButtonColorPrimary"
                app:sizeButton="semi"
                app:styleButton="inherit" />

            <TextView
                android:id="@+id/textViewColorPrimaryDisabled"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="60dp"
                android:layout_marginTop="?spacingTiny"
                android:text="@string/iconbutton_screen_color_primary_disabled_text"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/iconButtonColorPrimaryDisabled" />

            <com.natura.android.iconButton.IconButton
                android:id="@+id/iconButtonColorLight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:buttonColor="lightColor"
                app:iconName="outlined_default_mockup"
                app:layout_constraintEnd_toStartOf="@id/textViewColorPrimaryDisabled"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/iconButtonColorPrimaryDisabled"
                app:sizeButton="semi"
                app:styleButton="inherit" />

            <TextView
                android:id="@+id/textViewColorLight"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="60dp"
                android:layout_marginTop="?spacingTiny"
                android:text="@string/iconbutton_screen_color_light_text"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/iconButtonColorLight" />

            <com.natura.android.iconButton.IconButton
                android:id="@+id/iconButtonColorLightDisabled"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:enabled="false"
                app:buttonColor="lightColor"
                app:iconName="outlined_default_mockup"
                app:layout_constraintEnd_toStartOf="@id/textViewColorLight"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/iconButtonColorLight"
                app:sizeButton="semi"
                app:styleButton="inherit" />

            <TextView
                android:id="@+id/textViewButtonColorLightDisabled"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="60dp"
                android:layout_marginTop="?spacingTiny"
                android:text="@string/iconbutton_screen_color_light_disabled_text"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/iconButtonColorLightDisabled" />

            <com.natura.android.iconButton.IconButton
                android:id="@+id/iconButtonStyleInherit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:buttonColor="defaultColor"
                app:iconName="outlined_default_mockup"
                app:layout_constraintEnd_toStartOf="@id/textViewColorDefault"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/iconButtonColorLightDisabled"
                app:sizeButton="semi"
                app:styleButton="inherit" />

            <TextView
                android:id="@+id/textViewButtonStyleInherit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="60dp"
                android:layout_marginTop="?spacingTiny"
                android:text="@string/iconbutton_screen_inherit_background_default_text"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/iconButtonStyleInherit" />

            <com.natura.android.iconButton.IconButton
                android:id="@+id/iconButtonStyleFloating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:buttonColor="defaultColor"
                app:iconName="outlined_default_mockup"
                app:layout_constraintEnd_toStartOf="@id/textViewButtonStyleFloating"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/iconButtonStyleInherit"
                app:sizeButton="semi"
                app:styleButton="floating" />

            <TextView
                android:id="@+id/textViewButtonStyleFloating"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="60dp"
                android:layout_marginTop="?spacingTiny"
                android:text="@string/iconbutton_screen_float_background_text"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/iconButtonStyleFloating" />

            <com.natura.android.iconButton.IconButton
                android:id="@+id/iconButtonStyleFloatingDisabled"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:enabled="false"
                app:buttonColor="defaultColor"
                app:iconName="outlined_default_mockup"
                app:layout_constraintEnd_toStartOf="@id/textViewButtonStyleFloatingDisabled"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/iconButtonStyleFloating"
                app:sizeButton="semi"
                app:styleButton="floating" />

            <TextView
                android:id="@+id/textViewButtonStyleFloatingDisabled"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="60dp"
                android:layout_marginTop="?spacingTiny"
                android:text="@string/iconbutton_screen_float_background_default_text"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/iconButtonStyleFloatingDisabled" />

            <com.natura.android.iconButton.IconButton
                android:id="@+id/iconButtonStyleOverlay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:buttonColor="defaultColor"
                app:iconName="outlined_default_mockup"
                app:layout_constraintEnd_toStartOf="@id/textViewButtonStyleOverlay"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/iconButtonStyleFloatingDisabled"
                app:sizeButton="semi"
                app:styleButton="overlay" />

            <TextView
                android:id="@+id/textViewButtonStyleOverlay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="60dp"
                android:layout_marginTop="?spacingTiny"
                android:text="@string/iconbutton_screen_overlay_background_text"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/iconButtonStyleOverlay" />

            <com.natura.android.iconButton.IconButton
                android:id="@+id/iconButtonStyleOverlayDisabled"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:enabled="false"
                app:buttonColor="defaultColor"
                app:iconName="outlined_default_mockup"
                app:layout_constraintEnd_toStartOf="@id/textViewButtonStyleOverlayDisabled"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/iconButtonStyleOverlay"
                app:sizeButton="semi"
                app:styleButton="overlay" />

            <TextView
                android:id="@+id/textViewButtonStyleOverlayDisabled"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="60dp"
                android:layout_marginTop="?spacingTiny"
                android:text="@string/iconbutton_screen_overlay_background_disabled_text"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/iconButtonStyleOverlayDisabled" />

            <com.natura.android.iconButton.IconButton
                android:id="@+id/iconButtonSizeSemi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:buttonColor="defaultColor"
                app:iconName="outlined_default_mockup"
                app:layout_constraintEnd_toStartOf="@id/textViewButtonSizeSemi"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/iconButtonStyleOverlayDisabled"
                app:sizeButton="semi"
                app:styleButton="inherit" />

            <TextView
                android:id="@+id/textViewButtonSizeSemi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="60dp"
                android:layout_marginTop="?spacingTiny"
                android:text="@string/iconbutton_screen_size_semi_text"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/iconButtonSizeSemi" />

            <com.natura.android.iconButton.IconButton
                android:id="@+id/iconButtonSizeSemix"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:buttonColor="defaultColor"
                app:iconName="outlined_default_mockup"
                app:layout_constraintEnd_toStartOf="@id/textViewButtonSizeSemix"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/iconButtonSizeSemi"
                app:sizeButton="semix"
                app:styleButton="inherit" />

            <TextView
                android:id="@+id/textViewButtonSizeSemix"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="60dp"
                android:layout_marginTop="?spacingTiny"
                android:text="@string/iconbutton_screen_size_semix_text"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/iconButtonSizeSemix" />

            <com.natura.android.iconButton.IconButton
                android:id="@+id/iconButtonSizeMedium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:buttonColor="defaultColor"
                app:iconName="outlined_default_mockup"
                app:layout_constraintEnd_toStartOf="@id/textViewButtonSizeMedium"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/iconButtonSizeSemix"
                app:sizeButton="medium"
                app:styleButton="inherit" />

            <TextView
                android:id="@+id/textViewButtonSizeMedium"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="60dp"
                android:layout_marginTop="?spacingTiny"
                android:text="@string/iconbutton_screen_size_medium_text"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/iconButtonSizeMedium" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>