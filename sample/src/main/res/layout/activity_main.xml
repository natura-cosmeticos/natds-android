<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fillViewport="true"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/background"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:padding="@dimen/ds_spacing_small"
            android:text="@string/main_screen_token_text"
            android:textAlignment="textStart"
            android:textColor="@color/highEmphasis" />

        <Button
            android:id="@+id/borderRadiusButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:background="@color/surface"
            android:drawableRight="@drawable/outlined_navigation_arrowleft"
            android:padding="16dp"
            android:text="@string/main_screen_border_radius_text"
            android:textAlignment="textStart"
            android:textColor="@color/highEmphasis" />

        <Button
            android:id="@+id/colorTokensButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:background="@color/surface"
            android:drawableRight="@drawable/outlined_navigation_arrowleft"
            android:padding="16dp"
            android:text="@string/main_screen_color_text"
            android:textAlignment="textStart"
            android:textColor="@color/highEmphasis" />

        <Button
            android:id="@+id/elevationTokensButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:background="@color/surface"
            android:drawableRight="@drawable/outlined_navigation_arrowleft"
            android:padding="16dp"
            android:text="@string/main_screen_elevation_text"
            android:textAlignment="textStart"
            android:textColor="@color/highEmphasis" />

        <Button
            android:id="@+id/btnIconsDrawables"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:background="@color/surface"
            android:drawableRight="@drawable/outlined_navigation_arrowleft"
            android:padding="16dp"
            android:text="@string/main_screen_icons_text"
            android:textAlignment="textStart"
            android:textColor="@color/highEmphasis" />

        <Button
            android:id="@+id/opacityTokensButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:background="@color/surface"
            android:drawableRight="@drawable/outlined_navigation_arrowleft"
            android:padding="16dp"
            android:text="@string/main_screen_opacity_text"
            android:textAlignment="textStart"
            android:textColor="@color/highEmphasis" />

        <Button
            android:id="@+id/sizeButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:background="@color/surface"
            android:drawableRight="@drawable/outlined_navigation_arrowleft"
            android:padding="16dp"
            android:text="@string/main_screen_size_text"
            android:textAlignment="textStart"
            android:textColor="@color/highEmphasis" />

        <Button
            android:id="@+id/btnSpacing"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:background="@color/surface"
            android:drawableRight="@drawable/outlined_navigation_arrowleft"
            android:padding="16dp"
            android:text="@string/main_screen_spacing_text"
            android:textAlignment="textStart"
            android:textColor="@color/highEmphasis" />

        <Button
            android:id="@+id/typographyButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:background="@color/surface"
            android:drawableRight="@drawable/outlined_navigation_arrowleft"
            android:padding="16dp"
            android:text="@string/main_screen_typography_text"
            android:textAlignment="textStart"
            android:textColor="@color/highEmphasis" />

        <Button
            android:id="@+id/customTypographyButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:background="@color/surface"
            android:drawableRight="@drawable/outlined_navigation_arrowleft"
            android:padding="16dp"
            android:text="@string/main_screen_custom_typography_text"
            android:textAlignment="textStart"
            android:textColor="@color/highEmphasis" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:padding="16dp"
            android:text="@string/main_screen_component_text"
            android:textAlignment="textStart"
            android:textColor="@color/highEmphasis" />

        <Button
            android:id="@+id/btnAlert"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:background="@color/surface"
            android:drawableRight="@drawable/outlined_navigation_arrowleft"
            android:padding="16dp"
            android:text="@string/main_screen_alert"
            android:textAlignment="textStart"
            android:textColor="@color/highEmphasis" />

        <Button
            android:id="@+id/btnAppBarTop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:background="@color/surface"
            android:drawableRight="@drawable/outlined_navigation_arrowleft"
            android:padding="16dp"
            android:text="@string/main_screen_app_bar_top_text"
            android:textAlignment="textStart"
            android:textColor="@color/highEmphasis" />

        <Button
            android:id="@+id/btnAvatar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:background="@color/surface"
            android:drawableRight="@drawable/default_icon_outlined_navigation_arrowleft"
            android:padding="16dp"
            android:text="@string/main_screen_avatar_text"
            android:textAlignment="textStart"
            android:textColor="@color/highEmphasis" />

        <Button
            android:id="@+id/btnBadge"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:background="@color/surface"
            android:drawableRight="@drawable/outlined_navigation_arrowleft"
            android:padding="16dp"
            android:text="@string/main_screen_badge_text"
            android:textAlignment="textStart"
            android:textColor="@color/highEmphasis" />

        <Button
            android:id="@+id/btnStyleButtons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:background="@color/surface"
            android:drawableRight="@drawable/outlined_navigation_arrowleft"
            android:padding="16dp"
            android:text="@string/main_screen_button_text"
            android:textAlignment="textStart"
            android:textColor="@color/highEmphasis" />

        <Button
            android:id="@+id/btnCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:background="@color/surface"
            android:drawableRight="@drawable/outlined_navigation_arrowleft"
            android:padding="16dp"
            android:text="@string/main_screen_card_text"
            android:textAlignment="textStart"
            android:textColor="@color/highEmphasis" />

        <Button
            android:id="@+id/checkboxButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:background="@color/surface"
            android:drawableRight="@drawable/outlined_navigation_arrowleft"
            android:padding="16dp"
            android:text="@string/main_screen_checkbox_text"
            android:textAlignment="textStart"
            android:textColor="@color/highEmphasis" />

        <Button
            android:id="@+id/chipButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:background="@color/surface"
            android:drawableRight="@drawable/outlined_navigation_arrowleft"
            android:padding="16dp"
            android:text="@string/main_screen_chip_text"
            android:textAlignment="textStart"
            android:textColor="@color/highEmphasis" />


        <Button
            android:id="@+id/counterButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:background="@color/surface"
            android:drawableRight="@drawable/outlined_navigation_arrowleft"
            android:padding="16dp"
            android:text="@string/main_screen_counter_text"
            android:textAlignment="textStart"
            android:textColor="@color/highEmphasis" />

        <Button
            android:id="@+id/dialogButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:background="@color/surface"
            android:drawableRight="@drawable/outlined_navigation_arrowleft"
            android:padding="16dp"
            android:text="@string/main_screen_dialog_text"
            android:textAlignment="textStart"
            android:textColor="@color/highEmphasis" />

        <Button
            android:id="@+id/dividerButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:background="@color/surface"
            android:drawableRight="@drawable/outlined_navigation_arrowleft"
            android:padding="16dp"
            android:text="@string/main_screen_divider_text"
            android:textAlignment="textStart"
            android:textColor="@color/highEmphasis" />

        <Button
            android:id="@+id/btnExpansionPanel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:background="@color/surface"
            android:drawableRight="@drawable/outlined_navigation_arrowleft"
            android:padding="16dp"
            android:text="@string/main_screen_expansion_panel_text"
            android:textAlignment="textStart"
            android:textColor="@color/highEmphasis" />

        <Button
            android:id="@+id/iconButtonButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:background="@color/surface"
            android:drawableRight="@drawable/outlined_navigation_arrowleft"
            android:padding="16dp"
            android:text="@string/main_screen_icon_button_text"
            android:textAlignment="textStart"
            android:textColor="@color/highEmphasis" />

        <Button
            android:id="@+id/logoButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:background="@color/surface"
            android:drawableRight="@drawable/outlined_navigation_arrowleft"
            android:padding="16dp"
            android:text="@string/main_screen_logo_text"
            android:textAlignment="textStart"
            android:textColor="@color/highEmphasis" />

        <Button
            android:id="@+id/btnListItem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:background="@color/surface"
            android:drawableRight="@drawable/outlined_navigation_arrowleft"
            android:padding="16dp"
            android:text="@string/main_screen_list_item_text"
            android:textAlignment="textStart"
            android:textColor="@color/highEmphasis" />

        <Button
            android:id="@+id/progressIndicatorButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:background="@color/surface"
            android:drawableRight="@drawable/outlined_navigation_arrowleft"
            android:padding="16dp"
            android:text="@string/main_screen_progress_indicator_text"
            android:textAlignment="textStart"
            android:textColor="@color/highEmphasis" />

        <Button
            android:id="@+id/radioButtonButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:background="@color/surface"
            android:drawableRight="@drawable/outlined_navigation_arrowleft"
            android:padding="16dp"
            android:text="@string/main_screen_radio_button_text"
            android:textAlignment="textStart"
            android:textColor="@color/highEmphasis" />

        <Button
            android:id="@+id/btnRating"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:background="@color/surface"
            android:drawableRight="@drawable/default_icon_outlined_navigation_arrowleft"
            android:padding="16dp"
            android:text="@string/main_screen_rating_text"
            android:textAlignment="textStart"
            android:textColor="@color/highEmphasis" />

        <Button
            android:id="@+id/selectButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:background="@color/surface"
            android:drawableRight="@drawable/outlined_navigation_arrowleft"
            android:padding="16dp"
            android:text="@string/main_screen_select_text"
            android:textAlignment="textStart"
            android:textColor="@color/highEmphasis" />

        <Button
            android:id="@+id/snackbarButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:background="@color/surface"
            android:drawableRight="@drawable/outlined_navigation_arrowleft"
            android:padding="16dp"
            android:text="@string/main_screen_snackbar_text"
            android:textAlignment="textStart"
            android:textColor="@color/highEmphasis" />

        <Button
            android:id="@+id/shortcutButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:background="@color/surface"
            android:drawableRight="@drawable/outlined_navigation_arrowleft"
            android:padding="16dp"
            android:text="@string/main_screen_shortcut_text"
            android:textAlignment="textStart"
            android:textColor="@color/highEmphasis" />

        <Button
            android:id="@+id/tagButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:background="@color/surface"
            android:drawableRight="@drawable/outlined_navigation_arrowleft"
            android:padding="16dp"
            android:text="@string/main_screen_tag_text"
            android:textAlignment="textStart"
            android:textColor="@color/highEmphasis" />

        <Button
            android:id="@+id/btnTextfield"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:background="@color/surface"
            android:drawableRight="@drawable/outlined_navigation_arrowleft"
            android:padding="16dp"
            android:text="@string/main_screen_textfield_text"
            android:textAlignment="textStart"
            android:textColor="@color/highEmphasis" />

        <Button
            android:id="@+id/btnValueTextHighlight"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:background="@color/surface"
            android:drawableRight="@drawable/outlined_navigation_arrowleft"
            android:padding="16dp"
            android:text="@string/main_screen_value_text_highlight_text"
            android:textAlignment="textStart"
            android:textColor="@color/highEmphasis"
            android:visibility="gone" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:padding="16dp"
            android:text="@string/main_screen_pattern_text"
            android:textAlignment="textStart"
            android:textColor="@color/highEmphasis" />

        <Button
            android:id="@+id/btnErrorDefault"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:background="@color/surface"
            android:drawableRight="@drawable/outlined_navigation_arrowleft"
            android:padding="16dp"
            android:text="@string/main_screen_error_default_text"
            android:textAlignment="textStart"
            android:textColor="@color/highEmphasis" />

        <Button
            android:id="@+id/btnNavigationDrawer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:background="@color/surface"
            android:drawableRight="@drawable/outlined_navigation_arrowleft"
            android:padding="16dp"
            android:text="@string/main_screen_navigation_drawer_text"
            android:textAlignment="textStart"
            android:textColor="@color/highEmphasis" />

        <Button
            android:id="@+id/btnMenu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:background="@color/surface"
            android:drawableRight="@drawable/outlined_navigation_arrowleft"
            android:padding="16dp"
            android:text="@string/main_screen_menu_item_text"
            android:textAlignment="textStart"
            android:textColor="@color/highEmphasis" />

        <Button
            android:id="@+id/btnSubmenu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:background="@color/surface"
            android:drawableRight="@drawable/outlined_navigation_arrowleft"
            android:padding="16dp"
            android:text="@string/main_screen_submenu_item_text"
            android:textAlignment="textStart"
            android:textColor="@color/highEmphasis" />
    </LinearLayout>
</ScrollView>
