<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:fillViewport="true"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/background"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TOKEN (A-Z)"
            android:textColor="@color/highEmphasis"
            android:padding="16dp"
            android:textAlignment="textStart"
            android:layout_gravity="start" />

        <Button
            android:id="@+id/colorTokensButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Color"
            android:drawableRight="@drawable/ds_ic_outlined_navigation_arrowleft"
            android:textAlignment="textStart"
            android:layout_gravity="start"
            android:padding="16dp"
            android:background="@color/surface"
            android:textColor="@color/highEmphasis" />

        <Button
            android:id="@+id/borderRadiusButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Border Radius"
            android:drawableRight="@drawable/ds_ic_outlined_navigation_arrowleft"
            android:textAlignment="textStart"
            android:layout_gravity="start"
            android:padding="16dp"
            android:background="@color/surface"
            android:textColor="@color/highEmphasis" />

        <Button
            android:id="@+id/btnIconsDrawables"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Icons (drawables)"
            android:drawableRight="@drawable/ds_ic_outlined_navigation_arrowleft"
            android:textAlignment="textStart"
            android:layout_gravity="start"
            android:padding="16dp"
            android:background="@color/surface"
            android:textColor="@color/highEmphasis" />

        <Button
            android:id="@+id/btnIconsFont"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Icons (fonts)"
            android:drawableRight="@drawable/ds_ic_outlined_navigation_arrowleft"
            android:textAlignment="textStart"
            android:layout_gravity="start"
            android:padding="16dp"
            android:background="@color/surface"
            android:textColor="@color/highEmphasis" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnSpacing"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Spacing"
            android:drawableRight="@drawable/ds_ic_outlined_navigation_arrowleft"
            android:textAlignment="textStart"
            android:layout_gravity="start"
            android:padding="16dp"
            android:background="@color/surface"
            android:textColor="@color/highEmphasis" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="COMPONENT (A-Z)"
            android:textColor="@color/highEmphasis"
            android:padding="16dp"
            android:textAlignment="textStart"
            android:layout_gravity="start"
            />

        <Button
            android:id="@+id/btnAppbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="App Bar (Top and Search)"
            android:drawableRight="@drawable/ds_ic_outlined_navigation_arrowleft"
            android:textAlignment="textStart"
            android:layout_gravity="start"
            android:padding="16dp"
            android:background="@color/surface"
            android:textColor="@color/highEmphasis" />

        <Button
            android:id="@+id/btnStyleButtons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Button"
            android:drawableRight="@drawable/ds_ic_outlined_navigation_arrowleft"
            android:textAlignment="textStart"
            android:layout_gravity="start"
            android:padding="16dp"
            android:background="@color/surface"
            android:textColor="@color/highEmphasis" />

        <Button
            android:id="@+id/btnSelection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Selection Control"
            android:drawableRight="@drawable/ds_ic_outlined_navigation_arrowleft"
            android:textAlignment="textStart"
            android:layout_gravity="start"
            android:padding="16dp"
            android:background="@color/surface"
            android:textColor="@color/highEmphasis" />

        <Button
            android:id="@+id/btnTextfield"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Text Field"
            android:drawableRight="@drawable/ds_ic_outlined_navigation_arrowleft"
            android:textAlignment="textStart"
            android:layout_gravity="start"
            android:padding="16dp"
            android:background="@color/surface"
            android:textColor="@color/highEmphasis" />

        <Button
            android:id="@+id/btnValueTextHighlight"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Value Text Highlight"
            android:drawableRight="@drawable/ds_ic_outlined_navigation_arrowleft"
            android:textAlignment="textStart"
            android:layout_gravity="start"
            android:padding="16dp"
            android:background="@color/surface"
            android:textColor="@color/highEmphasis" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="PATTERN (A-Z)"
            android:textColor="@color/highEmphasis"
            android:padding="16dp"
            android:textAlignment="textStart"
            android:layout_gravity="start" />

        <Button
            android:id="@+id/btnMenu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Menu Item"
            android:drawableRight="@drawable/ds_ic_outlined_navigation_arrowleft"
            android:textAlignment="textStart"
            android:layout_gravity="start"
            android:padding="16dp"
            android:background="@color/surface"
            android:textColor="@color/highEmphasis" />

        <Button
            android:id="@+id/btnSubmenu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Submenu Item"
            android:drawableRight="@drawable/ds_ic_outlined_navigation_arrowleft"
            android:textAlignment="textStart"
            android:layout_gravity="start"
            android:padding="16dp"
            android:background="@color/surface"
            android:textColor="@color/highEmphasis" />

        <Button
            android:id="@+id/btnNavigationDrawer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Navigation Drawer"
            android:drawableRight="@drawable/ds_ic_outlined_navigation_arrowleft"
            android:textAlignment="textStart"
            android:layout_gravity="start"
            android:padding="16dp"
            android:background="@color/surface"
            android:textColor="@color/highEmphasis" />

        <Button
            android:id="@+id/btnLoader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Loading"
            android:drawableRight="@drawable/ds_ic_outlined_navigation_arrowleft"
            android:textAlignment="textStart"
            android:layout_gravity="start"
            android:padding="16dp"
            android:background="@color/surface"
            android:textColor="@color/highEmphasis" />

        <Button
            android:id="@+id/btnErrorDefault"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Error Default"
            android:drawableRight="@drawable/ds_ic_outlined_navigation_arrowleft"
            android:textAlignment="textStart"
            android:layout_gravity="start"
            android:padding="16dp"
            android:background="@color/surface"
            android:textColor="@color/highEmphasis" />
    </LinearLayout>
</ScrollView>
