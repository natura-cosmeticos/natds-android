<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:theme="@style/Theme.Natura.Light">

    <com.natura.android.widget.ValueTextHighlight
        android:id="@+id/highlightInitOnXml"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:description_label="Description on Xml"
        app:highlight_label="R$ 11,02" />

    <Space
        android:layout_width="0dp"
        android:layout_height="20dp" />

    <com.natura.android.widget.ValueTextHighlight
        android:id="@+id/highlightInitViaCode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>
